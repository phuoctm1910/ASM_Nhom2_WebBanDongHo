@model ASM_Nhom2_View.Data.Bill
@using Microsoft.AspNetCore.Http
@{

    Layout = null;
    string FullName = Context.Session.GetString("FullName");
    string Email = Context.Session.GetString("Email");
    bool isLoggedIn = !string.IsNullOrEmpty(Email);
    var totalQuantity = Model.BillDetails.Sum(bd => bd.Quantity);
    var totalAllUnit = Model.BillDetails.Sum(bd => bd.TotalPrice);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart</title>
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--Icon-->
    <script src="https://kit.fontawesome.com/b4d3d14cb1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <script src="https://www.paypal.com/sdk/js?client-id=AebofN_DkrFC65HpBSaFLspfFw-g5xuWtD7RLcIgzpTvHxhiPTJbFq-QSKFpI5mloKSMcXi3nsh4xEA-" asp-append-version="true"></script>

    <style>
        .disable-link {
            pointer-events: none;
            color: white;
            cursor: not-allowed;
            background-color: gray;
            opacity: 0.7;
        }
