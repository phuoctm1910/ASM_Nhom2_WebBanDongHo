@model IEnumerable<ASM_Nhom2_View.Models.ProductVM>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>


<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Code</th>
            <th>Stock</th>
            <th>Price</th>
            <th>
                Number of Images
            </th>
            <th>Category</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductCode</td>
                <td>@product.ProductStock</td>
                <td>@product.ProductPrice</td>

                <td>
                    @product.ProductImageList.Count
                </td>
                <td>@product.CategoryName</td>

                <td>
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
