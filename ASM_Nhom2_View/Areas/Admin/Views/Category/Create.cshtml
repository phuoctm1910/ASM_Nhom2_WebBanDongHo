@model ASM_Nhom2_View.Data.Category

@{
    ViewData["Title"] = "Thêm Phân Loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Phân Loại</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thêm Phân Loại</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Điền đầy đủ thông tin</h3>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="CategoryName" class="control-label">Tên Phân Loại</label>
                                <input asp-for="CategoryName" class="form-control" required pattern="^[A-Za-z\s]+$" title="Chỉ được điền chữ cái và dấu cách" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-dark">Xác nhận</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
